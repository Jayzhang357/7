<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <TextView
        android:id="@+id/textView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Jobtext"
        android:layout_alignBaseline="@+id/Jobtext"
        android:layout_marginLeft="300dp"
        android:textSize="40dp"
        android:text="@string/job_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etCreateField"
        style="@style/edittext_name"
        android:layout_width="400dp"

        android:background="@color/textback"
        android:layout_height="50dp"
        android:layout_below="@+id/textView02"
        android:layout_alignLeft="@+id/textView02" />

    <Button
        android:id="@+id/rest"
        style="@style/gnss_setting_button_b"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/textView02"
        android:layout_below="@+id/etCreateField"
        android:layout_marginTop="200dp"
        android:focusable="false"
        android:layout_marginLeft="100dp"
        android:text="@string/newbt_tx" />



<TextView
    android:id="@+id/Jobtext"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="20dp"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="28dp"
    android:textSize="40dp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:text="@string/zylx"
></TextView>

    <RelativeLayout
        android:id="@+id/rlGrid"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView02"

        android:layout_marginLeft="28dp"
        android:background="@drawable/solid_bg"
        android:padding="2dp">

        <GridView
            android:id="@+id/gvField"
            style="@style/common_grid_style"
            android:layout_width="250dp"
            android:layout_height="330dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:columnWidth="170dp"></GridView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout10"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/bottomBar"
            layout="@layout/bottom_bar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvsetting"
            style="@style/title_word"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="" />
    </RelativeLayout>


</RelativeLayout>