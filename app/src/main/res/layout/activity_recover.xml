<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <TextView
        android:id="@+id/t1"
        style="@style/text_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/hfccsz" />


    <RelativeLayout
        android:id="@+id/rll05"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/t1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.61"
        android:background="@color/back"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/yysz"
            style="@style/text_verySmall"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="@string/yysz" />

        <Spinner
            android:id="@+id/spinner1"
            style="@style/text_verySmall"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:enabled="false"
            android:gravity="center"
            android:spinnerMode="dropdown">
        </Spinner>

        <TextView
            android:id="@+id/mes"
            style="@style/text_verySmall"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/yysz"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:text="@string/mes55" />

        <Button
            android:id="@+id/rest"
            style="@style/gnss_setting_button_b"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mes"
            android:layout_marginTop="80dp"
            android:focusable="false"
            android:text="@string/hfccsz" />





    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/linearLayout10"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/bottomBar"
            layout="@layout/bottom_bar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvsetting"
            style="@style/title_word"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="" />
    </RelativeLayout>


</RelativeLayout>